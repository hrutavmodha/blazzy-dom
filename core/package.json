{
    "name": "blazzy-dom",
    "version": "1.1.1",
    "type": "module",
    "description": "A tiny, batteries-included JSX-to-DOM micro-framework. No virtual DOM, no component classes â€” just plain functions that return real DOM nodes, a minimal hooks system, a simple client-side router, and a small set of useful UI primitives.",
    "lint-staged": {
        "src/**/*.{js, ts, tsx}": [
            "eslint --fix",
            "prettier --write"
        ]
    },
    "main": "./package/dist/blazzy-dom.es.js",
    "types": "./package/index.d.ts",
    "exports": {
        ".": {
            "import": "./package/dist/blazzy-dom.es.js",
            "types": "./package/index.d.ts"
        },
        "./jsx/jsx-runtime": {
            "import": "./package/jsx/jsx-runtime.ts",
            "types": "./package/jsx/jsx.d.ts"
        },
        "./jsx/jsx-dev-runtime": {
            "import": "./package/jsx/jsx-dev-runtime.ts",
            "types": "./package/jsx/jsx.d.ts"
        }
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/hrutavmodha/blazzy-dom.git"
    },
    "files": [
        "./README.md",
        "./LICENSE",
        "./package.json",
        "./package/"
    ],
    "keywords": [
        "frontend",
        "jsx",
        "dom",
        "typescript",
        "ui"
    ],
    "author": "Hrutav Modha",
    "maintainers": [
        "Hrutav Modha"
    ],
    "license": "MIT",
    "scripts": {
        "start": "vite",
        "build": "tsc && vite build",
        "build:types": "tsc --project tsconfig.build.json",
        "lint": "eslint ./src --ext .js,.ts,.tsx",
        "lint:fix": "eslint ./src --ext .js,.ts,.tsx --fix",
        "format": "prettier --write .",
        "type-check": "tsc --noEmit",
        "prepare": "husky",
        "preview": "vite preview"
    },
    "devDependencies": {
        "@eslint/js": "^9.33.0",
        "@types/node": "^24.3.0",
        "@typescript-eslint/eslint-plugin": "^8.39.0",
        "@typescript-eslint/parser": "^8.39.0",
        "eslint": "^9.33.0",
        "eslint-plugin-jsx-a11y": "^6.10.2",
        "eslint-plugin-prettier": "^5.5.4",
        "husky": "^9.1.7",
        "lint-staged": "^16.1.5",
        "prettier": "^3.6.2",
        "socket.io-client": "^4.8.1",
        "typescript": "~5.8.3",
        "typescript-eslint": "^8.39.0",
        "vite": "^7.0.4"
    }
}
